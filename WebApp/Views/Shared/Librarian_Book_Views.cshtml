<div class="modal fade" id="DeleteBookModel" tabindex="-1" role="dialog" aria-labelledby="DeleteBookModel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Are u sure that u want to delete this book?</h4>
            </div>
            <div class="modal-body">
                <h4>ID:<span data-bind="text: bookViewModel.selectedBook.Id"></span></h4>
                <h4>NAME:<span data-bind="text: bookViewModel.selectedBook.Name"></span></h4>
                <h4>AUTHOR:<span data-bind="text: bookViewModel.selectedBook.Author"></span></h4>
                <h4>PUBLISH DATE:<span data-bind="text: bookViewModel.selectedBook.PublishedDate"></span></h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: bookViewModel.RemoveBook">Delete</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="EditBookModel" tabindex="-1" role="dialog" aria-labelledby="EditBookModel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Id" data-bind="value: bookViewModel.selectedBook.Id" readonly="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Author</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Author" data-bind="value: bookViewModel.selectedBook.Author">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Book Name" data-bind="value: bookViewModel.selectedBook.Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Publish Date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputPassword3" placeholder="Publish Date" data-bind="value: bookViewModel.selectedBook.PublishedDate" readonly="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Book Shelf</label>
                        <div class="col-sm-10">
                            <select id="bookDropDown1" class="selectpicker" data-bind="foreach: shelfViewModel.shelfs">
                                <option data-bind="attr: { ShelfId: Id }, text: Number"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: bookViewModel.UpdateBook">Update book</button>
            </div>
        </div>
    </div>
</div>



