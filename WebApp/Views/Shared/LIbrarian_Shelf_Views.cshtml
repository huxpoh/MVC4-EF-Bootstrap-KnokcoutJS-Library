<div class="modal fade" id="DeleteShelfModel" tabindex="-1" role="dialog" aria-labelledby="DeleteShelfModel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Are u sure that u want to delete this Storage?</h4>
            </div>
            <div class="modal-body">
                <h4>ID:<span data-bind="text: shelfViewModel.selectedShelf.Id"></span></h4>
                <h4>NUMBER:<span data-bind="text: shelfViewModel.selectedShelf.Number"></span></h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: shelfViewModel.RemoveShelf">Delete</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="EditShelfModel" tabindex="-1" role="dialog" aria-labelledby="EditShelfModel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Id" data-bind="value: shelfViewModel.selectedShelf.Id" readonly="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Number" data-bind="value: shelfViewModel.selectedShelf.Number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Book Storage</label>
                        <div class="col-sm-10">
                            <select id="storageId1" data-bind="foreach: storageViewModel.storages">
                                <option data-bind="attr: { ShelfId: Id }, text: Number"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: shelfViewModel.UpdateShelf">Update Shelf</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="CreateShelfModel" tabindex="-1" role="dialog" aria-labelledby="CreateShelfModel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Edit Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Number" data-bind="value: shelfViewModel.selectedShelf.Number">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Book Storage</label>
                    <div class="col-sm-10">
                        <select id="storageId2" data-bind="foreach: storageViewModel.storages">
                            <option data-bind="attr: { ShelfId: Id }, text: Number"></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: shelfViewModel.CreateShelf">Create Shelf</button>
            </div>
        </div>
    </div>
</div>



