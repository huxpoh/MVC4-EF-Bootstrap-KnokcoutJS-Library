        </thead>
        <tbody data-bind="foreach: bookViewModel.books">
            <tr>
                <td data-bind="text: Id"></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: Author"></td>
                <td data-bind="text: PublishDate"></td>
                <td data-bind="text: BookShelfId"></td>
                <td>
                    <button data-bind="click: $parent.readerViewModel.TakeBook, value: Id" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#EditBookModel">Take book</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>